{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Proces odobrenja - ${title}",
      "wrap": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Vlasnik Ugovora:",
              "wrap": true,
              "spacing": "None",
              "separator": true,
              "height": "stretch",
              "isSubtle": true,
              "color": "Accent",
              "fontType": "Default"
            }
          ],
          "spacing": "Large",
          "backgroundImage": {},
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${vlasnik}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Broj Ugovora:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "height": "stretch",
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${brojUgovora}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Ugovorna strana sa kojom se zakljuèuje ugovor:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center",
          "separator": true
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${ugovornaStrana}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Tip ugovora:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center",
          "backgroundImage": {
            "horizontalAlignment": "Right"
          }
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${tipUgovora}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Naziv ugovora/ponude:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${naziv}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Predmet ugovora:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${predmetUgovora}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Ugovorena vrijednost:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${ugovorenaVrijednost}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Sažetak za odobrenje:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${sazetakZaOdobrenje}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Ponuda:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${ponuda}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true,
      "bleed": true
    },
    {
      "type": "ColumnSet",
      "columns": [
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "weight": "Bolder",
              "text": "Sharepoint link:",
              "wrap": true,
              "color": "Accent"
            }
          ],
          "verticalContentAlignment": "Center"
        },
        {
          "type": "Column",
          "width": "stretch",
          "items": [
            {
              "type": "TextBlock",
              "text": "${sharepointUrl}",
              "wrap": true
            }
          ]
        }
      ],
      "separator": true
    },
